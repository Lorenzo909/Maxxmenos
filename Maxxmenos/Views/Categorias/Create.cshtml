@model Maxxmenos.Models.Categoria

@{
    ViewData["Title"] = "Create";
}


<div class="col-md-4 mx-auto mt-2">
    <h3>Crear Color</h3>
    <br />
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2">
                <label asp-for="Nombre" class="control-label">Nombre de Color</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Descripcion" class="control-label">Codigo</label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-success mt-2 mb-2" />
            </div>
        </form>
    </div>
    <div>
        <input type="hidden" name="back" id="back" value="" />
        <a asp-action="Index" onclick="javascript:confirmar()">Regresar </a>
    </div>
</div>

<script>
confirmar
    function confirmar(){
        if (confirm("Estas Seguro(a) de Salir???")){
            document.getElementById("back").value = "si";
        } else {
            document.getElementById("back").value = "no";
        }
    }
</script>