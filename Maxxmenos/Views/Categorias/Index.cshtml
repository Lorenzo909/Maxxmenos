@model IEnumerable<Maxxmenos.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}



<div class="col-md-8 mx-auto mt-2">
    <h3>Lista de Categorias</h3>
    <a class="btn btn-success text-light mb-2" asp-action="Create">Create New</a>

    <table id="table_id" class="display mt-2">
        <thead>
            <tr>
                <th>
                    Color de Pintura
                </th>
                <th>
                    Codigo Pintura
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdCategoria">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.IdCategoria">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.IdCategoria">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts{
    <script>
    $('#table_id').DataTable({
        "processing": true,
        "searching": false

    });
    </script>
}