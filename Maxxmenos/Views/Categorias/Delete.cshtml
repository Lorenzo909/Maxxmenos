@model Maxxmenos.Models.Categoria

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Estas seguro que deseas borrar este registro?</h3>
<div>
    <h4>Colores</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
    </dl>
    
    <form asp-action="Delete">

        <input type="hidden" name="del" id="del" value="" />
        <input type="hidden" asp-for="IdCategoria" />
        <input type="submit" value="Delete" class="btn btn-danger" onclick="javascript:confirmar()" />
        <a asp-action="Index">Back to List </a>
    </form>
</div>

<script>
    confirmar
    function confirmar() {
        if (confirm("Estas Seguro(a) de Eliminar???")) {
            document.getElementById("del").value = "si";
        } else {
            document.getElementById("del").value = "no";
        }
    }
</script>
